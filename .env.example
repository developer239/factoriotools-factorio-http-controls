# Factorio RCON Configuration
FACTORIO_RCON_HOST=localhost
FACTORIO_RCON_PORT=27015
FACTORIO_RCON_PASSWORD=your-secure-password
FACTORIO_RCON_TIMEOUT=5000
FACTORIO_RCON_MAX_RETRIES=3

# Factorio Server Configuration
FACTORIO_SAVE_NAME=default
FACTORIO_SERVER_SETTINGS_PATH=/factorio/config/server-settings.json
FACTORIO_MODS_PATH=/factorio/mods
FACTORIO_AUTO_START=false

# HTTP Server Configuration (separate from Factorio game port)
PORT=8080
NODE_ENV=production

# Optional: Factorio Server Name (for multiplayer browser)
FACTORIO_SERVER_NAME=My Factorio Server
FACTORIO_SERVER_DESCRIPTION=Factorio server with HTTP controls
